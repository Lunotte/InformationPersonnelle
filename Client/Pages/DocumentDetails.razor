@page "/product-details/{Id:int}"
@inherits DocumentDetailsBase

@if(Document == null && ErrorMessage == null)
{
    <h3>Loading document details…</h3>
    <DisplaySpinner/>
}
else if(ErrorMessage != null)
{
    <DisplayError ErrorMessage="@ErrorMessage"></DisplayError>
}
else
{
    <h3 class="mb-5">Document Details</h3>
    <div class="row">
        <div class="col-md-6 mb-4">
            <img class="img-fluid" src="@Document.Chemin" />
        </div>
        <div class="col-md-6">
            <h3>@Document.Libelle</h3>
            <p class="mb-4">@Document.Description</p>
            @foreach (var tag in @Document.Tags)
            {
                <p class="mb-4 badge badge-custom" style="background-color: @tag.Couleur">@tag.Libelle</p>
            }
        </div>
    </div>
}
